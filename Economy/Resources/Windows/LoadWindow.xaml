<Window x:Class="Economy.Resources.Windows.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Economy.Resources.Windows"
        mc:Ignorable="d"
        Title="LoadWindow"
        Height="150"
        Width="300">
    <Grid>
        <StackPanel>
            <Label Margin="5">Данные экспортируются...</Label>
            <Label Margin="5">Пожалуйста подождите.</Label>
            <ProgressBar Margin="5"
                         IsIndeterminate="True"
                         Width="200"
                         Height="20"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>